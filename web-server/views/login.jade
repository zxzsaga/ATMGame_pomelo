extends layout
block head
  include pomelo-head
  script(type='text/javascript', src='js/cookieUtil.js')
  script(type='text/javascript', src='js/ATMGame/login.js')
block body
  .container(style='text-align:center; padding-top: 50px;')
    // h1 Welcome ~
    // h1 This is ATM Game Platform
    br
    .row
      form.form-horizontal.col-lg-4.col-lg-offset-4
        .form-group
          .col-lg-12
            input#usr.form-control.input-lg(type='text', placeholder='Username')
        .form-group
          .col-lg-12
            input#pwd.form-control.input-lg(type='password', placeholder='Password')
        if error
          .form-group
            .col-lg-8.col-lg-offset-2.alert.alert-danger
              p #{ error }
        .form-group
          button#login-btn.col-lg-4.col-lg-offset-1.btn.btn-lg.btn-default(type='button')
          a.col-lg-4.col-lg-offset-2.btn.btn-lg.btn-default(href='/register') Register
